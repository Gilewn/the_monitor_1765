<div class="articles">
  <div class="container">
    <div class="row">
    <div class="col-lg-6">
    <h1 class="public">Public News</h1>

    <% @news.each do |f| %>
    <div class="article">
      <p class="date"><%= f.created_at.strftime('%b %d') %></p>
      <%= link_to news_path(f) do %>
      <h2><%= f.title %></h2>
      <% end %>
      <p class="author"><%= f.author %></p>
      <p class="article_content"><%= f.body %></p>
    </div>
    <% end %>
  </div>

    </div>
  </div>
</div>

<style>
 .toggler {
   width: 600px;
   position: absolute;
   top: 40%;
   right: 0;

 }
 #button {
   padding: .5em 1em;
   text-decoration: none;
   position: fixed;
   top: 34%;
   right: 0;
 }
 #effect {
   width: 100%;
   height: auto;
   overflow:auto;
   position: relative;
   padding: 0.4em;
   display: none;
 }
 #effect h3 {
   margin: 0;
   padding: 0.4em;
   text-align: center;
 }
 </style>

 <script>
 $( function() {
   // run the currently selected effect
   function runEffect() {
     // get effect type from
     var selectedEffect = "slide";

     // Most effect types need no options passed by default
     var options = {};
     // some effects have required parameters
     if ( selectedEffect === "scale" ) {
       options = { percent: 50 };
     } else if ( selectedEffect === "size" ) {
       options = { to: { width: 200, height: 60 } };
     }

     // Run the effect
     $( "#effect" ).css({"background-image": "url('https://i.pinimg.com/originals/d4/a0/8b/d4a08b04f51a6ed58968df43f87b9d25.jpg')"}).toggle( selectedEffect,{ direction: "right" }, options, 500 );
    };

   // Set effect from select menu value
   $( "#button" ).on( "click", function() {
     runEffect();
   });
 } );
 </script>

<div class="toggler">
 <div id="effect" class="ui-widget-content ui-corner-all">
   <h3 class="ui-widget-header ui-corner-all"><a href="/articles">All Articles</a></h3>
   <div class="lside">
   <% @articles.each do |f| %>
   <div class="article">
     <p class="date"><%= f.created_at.strftime('%b %d') %></p>
     <%= link_to article_path(f) do %>
     <h2><%= f.title %></h2>
     <% end %>
     <p class="author"><%= f.author %></p>
     <p class="article_content"><%= f.body %></p>
   </div>
   <% end %>
 </div>

   <div class="rside">
   <% @articles_side.each do |f| %>
   <div class="article">
     <p class="date"><%= f.created_at.strftime('%b %d') %></p>
     <%= link_to article_path(f) do %>
     <h2><%= f.title %></h2>
     <% end %>
     <p class="author"><%= f.author %></p>
     <p class="article_content"><%= f.body %></p>
   </div>
   <% end %>
 </div>
 </div>
</div>

<button id="button" class="ui-state-default ui-corner-all">Your Articles</button>
